{% if communityListItems.length %}
  <section class="[ community-list ] [ pad-top-700 gap-bottom-900 ]">
    <div class="[ inner-wrapper ] [ sf-flow ]">
      <h2 class="[ community-list__heading ] [ text-700 md:text-800 ]">{{ postListHeading }}</h2>
      <ol class="[ community-list__items ] [ sf-flow pad-top-300 ]" reversed>
        {% for item in communityListItems %}
          {% if item.date.getTime() <= global.now %}
            <li class="community-list__item">
              <h3 class="font-base leading-tight text-600 weight-mid">
                {{ item.data.title }}
              </h3>
              <p class="text-500 gap-top-300 weight-mid">
                <time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
              </p>
              {% if item.data.location %}
                <p class="text-500 gap-top-200 italic">
                  üìç {{ item.data.location }}
                </p>
              {% endif %}
              <div class="text-500 gap-top-300">
                {{ item.templateContent | safe }}
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ol>
    </div>
  </section>
{% endif %}
